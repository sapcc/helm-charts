#!/usr/bin/env bash

set -ex

#
# to make agents named after the node
#
echo "[DEFAULT]" > /etc/designate/hostname.conf
echo "host = $NODE_NAME" >> /etc/designate/hostname.conf

#
# other configs
#
cp /designate-etc/* /etc/designate/

exec designate-producer --config-file /etc/designate/designate.conf --config-file /etc/designate/hostname.conf --log-config-append /etc/designate/logging.conf
