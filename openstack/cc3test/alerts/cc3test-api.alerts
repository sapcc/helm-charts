groups:
- name: cc3test-api.alerts
  rules:
  - alert: CCloudApiDown
    expr: cc3test_status{type="api"} == 0
    for: 5m
    labels:
      severity: warning
      tier: monitor
      service: '{{ $labels.service }}'
      context: '{{ $labels.service }}'
      dashboard: 'cc3test-overview?var-service={{ $labels.service }}'
      meta: '{{ $labels.name }} API is not responding for more than 5 minutes'
      report: 'cc3test/admin/object-storage/containers/cc3test/list/reports/{{ $labels.type }}'
      playbook: 'docs/devops/alert/{{ $labels.service }}'
    annotations:
      description: '{{ $labels.name }} API is not responding for more than 5 minutes'
      summary: '{{ $labels.name }} API is down'

  - alert: CCloudApiFlapping
    expr: changes(cc3test_status{type="api"}[30m]) > 8
    labels:
      severity: info
      tier: monitor
      service: '{{ $labels.service }}'
      context: '{{ $labels.service }}'
      dashboard: 'cc3test-overview?var-service={{ $labels.service }}'
      meta: '{{ $labels.name }} API is flapping'
      report: 'cc3test/admin/object-storage/containers/cc3test/list/reports/{{ $labels.type }}'
      playbook: 'docs/devops/alert/{{ $labels.service }}'
    annotations:
      description: '{{ $labels.name }} API is flapping'
      summary: '{{ $labels.name }} API is flapping'