#!/usr/bin/env sh

cd /host/etc/pki
NODE_AGENT_DIR="../../var/lib/kvm-node-agent"

[ -d ${NODE_AGENT_DIR}/CA ] || exit 1

if [ ! -L CA ]
then
    rm -rf CA
    ln -s ${NODE_AGENT_DIR}/CA
fi

[ -d ${NODE_AGENT_DIR}/libvirt ] || exit 1

if [ ! -L libvirt ]
then
    rm -rf libvirt
    ln -s ${NODE_AGENT_DIR}/libvirt
fi
