    labels:
      severity: critical
      tier: vmware
      service: '{{ $labels.service }}'
      context: '{{ $labels.context }}'
      meta: 'Datastore has no free space: {{ $labels.check }}. See Sentry for details. '
      sentry: blackbox/?query=test_{{ $labels.check }}
