{
  "project_scope": "project_id:%(project_id)s",
  "domain_scope": "domain_id:%(domain_id)s",

  "domain_viewer":  "rule:domain_scope and (role:monitoring_viewer or role:monitoring_admin)",
  "project_viewer": "rule:domain_viewer or (rule:project_scope and (role:monitoring_viewer or role:monitoring_admin))",

  "metric:list":     "rule:project_viewer",
  "metric:show":     "rule:project_viewer"
}
