groups:
  - name: apicmcpfault.alerts
    rules:
    - alert: NetworkApicMcpFaults
      expr: increase(network_apic_mcp_fault_counter_total[4m]) >0
      for: 4m
      labels:
        severity: info
        tier: net
        service: apic
        context: apic-health
        dashboard: apic-health
        playbook: /docs/devops/alert/network/aci.html#Mcp_Fault_Alert
      annotations:
        description: "{{ $labels.fault_desc }}, Fault Status is {{ $labels.fault_lifecyle }} for object {{ $labels.fault_summary }}
        for 4 minutes"
        summary: "MCP Fault is {{ $labels.fault_lifecyle }} with fault summary as {{ $labels.fault_summary }} for 4 minutes"
